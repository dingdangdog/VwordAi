{
  "name": "vwordai",
  "version": "0.0.1",
  "private": true,
  "type": "commonjs",
  "main": "main.js",
  "author": {
    "name": "dingdangdog",
    "email": "dingdangdogx@outlook.com"
  },
  "scripts": {
    "ui": "cd ui && npm run dev",
    "build": "",
    "electron": "electron .",
    "dev": "electron .",
    "package": "cd ui && npm run build-only && cd ../ && electron-builder"
  },
  "build": {
    "appId": "com.vwordai",
    "productName": "VwordAI",
    "directories": {
      "output": "package"
    },
    "files": [
      "main.js",
      "preload.js",
      "handler.js",
      "server/**",
      "ui/dist/**"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "ui/public/favicon.ico"
    }
  },
  "dependencies": {
    "audic": "^3.0.2",
    "axios": "^1.7.8",
    "chardet": "^2.0.0",
    "dotenv": "^16.4.5",
    "fs-extra": "^11.2.0",
    "iconv-lite": "^0.6.3",
    "microsoft-cognitiveservices-speech-sdk": "^1.41.0",
    "qrcode": "^1.5.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^33.4.9",
    "electron-builder": "^25.1.8"
  }
}
