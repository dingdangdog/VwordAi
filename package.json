{
  "name": "vwordai",
  "version": "0.0.6",
  "private": true,
  "type": "commonjs",
  "main": "main.js",
  "author": {
    "name": "dingdangdog",
    "email": "dingdangdogx@outlook.com"
  },
  "scripts": {
    "ui": "cd ui && npm run dev",
    "build-only": "cd ui && npm run build",
    "dev": "electron .",
    "package": "npm run build-only && electron-builder",
    "publish": "cd ui && npm run build-only && cd ../ && electron-builder --publish always"
  },
  "build": {
    "asar": true,
    "appId": "com.vwordai",
    "productName": "VwordAi",
    "directories": {
      "output": "package"
    },
    "files": [
      "main.js",
      "preload.js",
      "handler.js",
      "server/**",
      "ui/dist/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "dingdangdog",
        "repo": "VwordAi"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "ui/public/icon_256.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "axios": "^1.7.8",
    "chardet": "^2.0.0",
    "dotenv": "^16.4.5",
    "electron-log": "^5.0.3",
    "electron-updater": "^6.1.7",
    "fs-extra": "^11.2.0",
    "iconv-lite": "^0.6.3",
    "microsoft-cognitiveservices-speech-sdk": "^1.41.0",
    "qrcode": "^1.5.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12"
  }
}
