{
  "name": "vwordai",
  "version": "1.1.1",
  "private": true,
  "type": "commonjs",
  "main": "main.js",
  "author": {
    "name": "dingdangdog",
    "email": "dingdangdogx@outlook.com"
  },
  "scripts": {
    "ui": "cd ui && npm run dev",
    "build-ui": "cd ui && npm run build",
    "dev": "electron .",
    "package": "npm run build-ui && electron-builder",
    "builder": "electron-builder",
    "publish": "cd ui && npm run build-ui && cd ../ && electron-builder --publish always"
  },
  "build": {
    "asar": true,
    "appId": "com.vwordai",
    "productName": "VwordAi",
    "directories": {
      "output": "package"
    },
    "files": [
      "main.js",
      "preload.js",
      "handler.js",
      "server/**",
      "ui/dist/**"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "dingdangdog",
        "repo": "VwordAi"
      }
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "icons/icon.png",
      "artifactName": "${productName}-${version}.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "category": "public.app-category.utilities",
      "icon": "icons/icon.icns",
      "artifactName": "${productName}-${version}-${arch}.${ext}"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icons/icon.ico",
      "artifactName": "${productName}-Setup-${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "perMachine": false,
      "deleteAppDataOnUninstall": false
    }
  },
  "dependencies": {
    "alibabacloud-nls": "^1.0.2",
    "axios": "^1.7.8",
    "brotli": "^1.3.3",
    "chardet": "^2.0.0",
    "electron-log": "^5.4.0",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.2.0",
    "iconv-lite": "^0.6.3",
    "microsoft-cognitiveservices-speech-sdk": "^1.41.0",
    "openai": "^4.98.0",
    "say": "^0.16.0",
    "sound-play": "^1.1.0",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "dotenv": "^16.5.0",
    "electron": "^35.3.0",
    "electron-builder": "^25.1.8",
    "png2icons": "^2.0.1",
    "sharp": "^0.34.2",
    "svg2img": "^1.0.0-beta.2"
  }
}
