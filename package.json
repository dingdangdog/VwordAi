{
  "name": "dotts",
  "version": "0.0.1",
  "private": true,
  "type": "commonjs",
  "main": "main.js",
  "author": {
    "name": "dingdangdog",
    "email": "dingdangdogx@outlook.com"
  },
  "scripts": {
    "ui": "cd ui && npm run dev",
    "build": "cd ui && npm run build-only",
    "electron": "electron .",
    "package": "electron-builder"
  },
  "build": {
    "appId": "top.oldmoon.dotts",
    "productName": "DoTTS",
    "directories": {
      "output": "package"
    },
    "files": [
      "main.js",
      "preload.js",
      "handler.js",
      "server/**",
      "ui/dist/**"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "ui/public/favicon.ico"
    }
  },
  "dependencies": {
    "audic": "^3.0.2",
    "chardet": "^2.0.0",
    "dotenv": "^16.4.5",
    "iconv-lite": "^0.6.3",
    "microsoft-cognitiveservices-speech-sdk": "^1.41.0"
  },
  "devDependencies": {
    "electron": "^24.8.8",
    "electron-builder": "^23.6.0"
  }
}
